<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yaap_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".yaapcard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/themesettings_card"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30.0dip"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="36.0dip"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/system_neutral1_800"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:elevation="18dp"
                    android:paddingTop="5dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/aa" />

                <TextView
                    android:id="@+id/theming_cardtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="310dp"
                    android:text="Themes"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp">
            </androidx.cardview.widget.CardView>

        </LinearLayout>
     <LinearLayout
        android:layout_width="200dp"
        android:layout_height="500dp"
         android:layout_weight="1"
        android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:id="@+id/statusbarsettings_card"
             android:layout_width="160dp"
             android:layout_height="160dp"
             android:layout_marginStart="16dp"
             android:layout_marginTop="30.0dip"
             android:layout_marginEnd="16dp"
             android:layout_marginBottom="16dp"
             android:layout_weight="1"
             android:clickable="true"
             android:focusable="true"
             app:cardBackgroundColor="@android:color/system_neutral1_800"
             app:cardCornerRadius="24dp"
             app:cardElevation="0dp">
         </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:id="@+id/quicksettings_card"
             android:layout_width="160dp"
             android:layout_height="160dp"
             android:layout_marginStart="16dp"
             android:layout_marginTop="0dp"
             android:layout_marginEnd="16dp"
             android:layout_marginBottom="70dip"
             android:layout_weight="1"
             android:clickable="true"
             android:focusable="true"
             app:cardBackgroundColor="@android:color/system_neutral1_800"
             app:cardCornerRadius="24dp"
             app:cardElevation="0dp">

             <com.airbnb.lottie.LottieAnimationView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_centerVertical="true"
                 android:elevation="18dp"
                 android:paddingTop="5dp"
                 app:lottie_autoPlay="true"
                 app:lottie_loop="true"
                 app:lottie_rawRes="@raw/qs" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:paddingTop="130dp"
                 android:text="QS Pannel"
                 android:textColor="?android:attr/textColorPrimary"
                 android:textSize="18sp"
                 android:textStyle="bold">
         </androidx.cardview.widget.CardView>
     </LinearLayout>
    </LinearLayout>
</ScrollView>